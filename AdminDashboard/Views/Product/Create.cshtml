</head>
<body class="hold-transition sidebar-mini">

    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active">Create Product</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Create Product</h3>
                            </div>
                            <form asp-action="Create" enctype="multipart/form-data">
                                <div class="card-body">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Name" for="exampleInputName" class="control-label">Product Name</label>
                                        <input type="string" asp-for="Name" class="form-control" id="exampleInputName" placeholder="Enter Your Name" required />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="NameAr" for="exampleInputNameAr" class="control-label">Product NameAr</label>
                                        <input type="string" asp-for="NameAr" class="form-control" id="exampleInputNameAr" placeholder="Enter Your NameAr" required />
                                        <span asp-validation-for="NameAr" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Description" class="control-label" for="exampleInputDescription">Description</label>
                                        <input type="string" asp-for="Description" class="form-control" id="exampleInputDescription" required placeholder="Enter Your Description" />
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DescriptionAr" class="control-label" for="exampleInputDescriptionAr">DescriptionAr</label>
                                        <input type="string" required asp-for="DescriptionAr" class="form-control" id="exampleInputDescriptionAr" placeholder="Enter Your DescriptionAr" />
                                        <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Price" class="control-label" for="exampleInputPrice">Price</label>
                                        <input type="number" required asp-for="Price" class="form-control" id="exampleInputPrice" placeholder="Enter Your Product Price " />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Sizes" class="control-label" for="exampleInputSizes">Sizes</label>
                                        <input required type="string" asp-for="Sizes" class="form-control" id="exampleInputSizes" placeholder="Enter Your Product Sizes " />
                                        <span asp-validation-for="Sizes" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ImagePath" class="control-label" for="exampleInputImagePath">ImagePath</label>
                                        <input asp-for="ImagePath"capture type="file" class="form-control" accept="image/*" id="exampleInputImagePath" required />
                                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                                        
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Discount" class="control-label" for="exampleInputDiscount">Discount</label>
                                        <input type="number" asp-for="Discount" class="form-control" id="exampleInputDiscount" placeholder="Enter Your Product Discount " required />
                                        <span asp-validation-for="Discount" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Quantity" class="control-label" for="exampleInputQuantity">Quantity</label>
                                        <input type="number" asp-for="Quantity" class="form-control" id="exampleInputQuantity" placeholder="Enter Your Product Quantity " required />
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ModelNumber" class="control-label" for="exampleInputModelNumber">ModelNumber</label>
                                        <input type="string" asp-for="ModelNumber" class="form-control" id="exampleInputModelNumber" placeholder="Enter Your Product ModelNumber " required />
                                        <span asp-validation-for="ModelNumber" class="text-danger"></span>
                                    </div>
                                    <div class="row">
                                        <div class="col-8 col-md-8">
                                            <div >
                                                <div class="form-group">
                                                    <label asp-for="CategoryId" class="control-label" for="exampleInputCategoryId">Name Category</label>
                                                    <select asp-for="CategoryId" required class="form-control select2" id="exampleInputCategoryId" style="width: 100%;">
                                                        <option value="" selected disabled>Selected Name Category</option>
                                                        @foreach (var catr in categoriess)
                                                        {
                                                            <option value="@catr.Id">@catr.Name</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div >
                                                <div class="form-group">
                                                    <label asp-for="BrandId" class="control-label" for="exampleInputBrandId">Name Brand</label>
                                                    <select asp-for="BrandId" class="form-control select2" id="exampleInputBrandId" style="width: 100%;" required>
                                                        <option value="" selected disabled>selected Name Brand</option>
                                                        @foreach (var p in brands)
                                                        {
                                                            <option value="@p.Id">@p.Name</option>
                                                        }
                                                    </select>
                                                    <span asp-validation-for="BrandId" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group col-4 col-md-4">
                                            <label asp-for="ProductColorsidsIds" class="control-label" for="exampleInputProductColors">Product Colors</label>
                                            <select multiple asp-for="ProductColorsidsIds" class="form-control select2" id="exampleInputProductColors" required>
                                                @foreach (var pc in ProductColors)
                                                {
                                                    <option value="@pc.Id">@pc.Name</option>
                                                }
                                            </select>
                                            <span asp-validation-for="ProductColorsidsIds" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                          <div class="card card-default">
                                            <div class="card-body">
                                                    <label asp-for="Images" class="control-label" for="exampleInputImages">Upload Images</label>
                                                <div id="actions" class="row">
                                                    <div class="col-lg-8">
                                                        <div class="btn-group w-100">
                                                            <span class="btn btn-success col-lg-8">
                                                                    <input type="file" asp-for="Images" accept="image/*" class="form-control btn btn-success" multiple id="exampleInputImages" style="font-size:larger;" required />
                                                            </span>
                                                            <button type="submit" class="btn btn-primary col start" hidden>
                                                                <i class="fas fa-upload"></i>
                                                                <span>Start upload Images</span>
                                                            </button>
                                                            <button type="reset" class="btn btn-warning col cancel col-lg-4">
                                                                <i class="fas fa-times-circle"></i>
                                                                    <span>Cancel All Images</span>
                                                            </button>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-4 d-flex align-items-center">
                                                        <div class="fileupload-process w-100">
                                                            <div id="total-progress" class="progress progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0">
                                                                <div class="progress-bar progress-bar-success" style="width:0%;" data-dz-uploadprogress></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                    <div class="table table-striped files" id="previews" hidden>
                                                    <div id="template" class="row mt-2" >
                                                        <div class="col-auto">
                                                            <span class="preview"><img src="data:," alt="" data-dz-thumbnail /></span>
                                                        </div>
                                                        <div class="col d-flex align-items-center">
                                                            <p class="mb-0">
                                                                 <span class="lead" data-dz-name></span>
                                                                 (<span data-dz-size></span>)
                                                            </p>
                                                            <strong class="error text-danger" data-dz-errormessage></strong>
                                                        </div>
                                                        <div class="col-4 d-flex align-items-center">
                                                            <div class="progress progress-striped active w-100" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0">
                                                                <div class="progress-bar progress-bar-success" style="width:0%;" data-dz-uploadprogress></div>
                                                            </div>
                                                        </div>
                                                        <div class="col-auto d-flex align-items-center">
                                                            <div class="btn-group">
                                                                <button class="btn btn-primary start" hidden>
                                                                    <i class=""></i>
                                                                    <span>Upload Image</span>
                                                                </button>
                                                                <button data-dz-remove class="btn btn-danger delete">
                                                                    <i class="fas fa-trash"></i>
                                                                    <span>Delete Image</span>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <span asp-validation-for="Images"></span>

                                            </div>
                                          </div> 
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </div>
                            </form>
                            <div class="card-footer">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="float:right">Back to List</a>
                            </div>
                            @{
                                await Html.RenderPartialAsync("_ValidationScriptsPartial");
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script>
        Dropzone.options.myAwesomeDropzone = {
            init: function () {
                this.on("success", function (file, response) {
                    var imageNames = $('#imageNames').val();
