@model AdminDashboard.Models.ProductModel
@{
    ViewData["Title"] = "Edit Product";
    var brans = ViewBag.brands;
    var product = ViewBag.Product;
    var categories = ViewBag.categories;
    var AllColors = ViewBag.ProductColors;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/FontSizeePage.css" />

    <style>
        .card-primary:not(.card-outline) > .card-header a {
            color: #000;
        }

        .element {
            padding-right: 0px;
            border-right-width: 0px;
            margin-right: 0px;
            padding-left: 0px;
            border-left-width: 0px;
        }

        .element1 {
            border: solid 1px white;
            font-size: 10px;
            position: absolute;
            top: 10px;
            margin-bottom: 1px !important;
            border-radius: 50%;
        }
    </style>
</head>

<body class="hold-transition sidebar-mini">
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Product Edit</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="card card-solid">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <div class="col-12">
                                <div>
                                    <img src="@product.ImagePath" class="product-image" style="height: 28em !important;width: 80%;" alt="Product Image">
                                </div>
                            </div>
                            
                            <div class="col-12 product-image-thumbs" style="margin-top:15px">
                                @foreach (var item in product.ProductImages)
                                {
                                    <div style="margin-left:15px;">
                                        <div class="product-image-thumb col-lg-12 element">
                                            <a class="btn-close element1" asp-controller="Product" asp-action="DeleteImageProduct" asp-route-id="@item.Id" asp-route-prd="@product.Id"
                                           onclick="return confirm('Are you sure you want to delete this Product Image :@item.Id ')"></a>
                                            <img src="@item.ImagePath" alt="Product Image">
                                        </div>
                                    </div>
                                }
                            </div>
                            <br /><br />
                            
                            <div class="col-12 product-image-thumbs" style="margin-top:15px">
                                @foreach (var item in product.ProductColors)
                                {
                                    <label style="width:40px;height:40px;background:@item.Name;border-radius:50%;margin-left:3px;border:solid 1px black">
                                        <a class=" btn-close element1" asp-controller="Product" asp-action="DeleteColorProduct" asp-route-id="@item.Id" asp-route-prd="@product.Id"
                                       onclick="return confirm('Are you sure you want to delete this Product color: @item.Name & PrdId :@product.Id ')"></a>
                                    </label>
                                }
                            </div>
                            <br /><br />
                        </div>
                        <div class="col-12 col-sm-6">
                            <form asp-action="Edit" enctype="multipart/form-data">
                                <div class="card-body">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label" for="exampleInputName">Product Name</label>
                                        <input asp-for="Name" class="form-control" required value="@product.Name" type="string" id="exampleInputName" placeholder="Product Name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="NameAr" class="control-label" for="exampleInputNameAr">ProductNameAr</label>
                                        <input asp-for="NameAr" class="form-control" required value="@product.NameAr" type="string" id="exampleInputNameAr" placeholder="Product NameAr" />
                                        <span asp-validation-for="NameAr" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Description" class="control-label" for="exampleInputDescription">Description</label>
                                        <input asp-for="Description" required class="form-control" value="@product.Description" type="text" id="exampleInputDescription" placeholder="Description Name" />
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DescriptionAr" class="control-label" for="exampleInputDescriptionAr">DescriptionAr</label>
                                        <input asp-for="DescriptionAr" required class="form-control" value="@product.DescriptionAr" type="text" id="exampleInputDescriptionAr" placeholder="DescriptionAR Name" />
                                        <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Price" class="control-label" for="exampleInputPrice">Price</label>
                                        <input asp-for="Price" required class="form-control" value="@product.Price" type="number" id="exampleInputPrice" placeholder="Price Number" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Sizes" class="control-label" for="exampleInputSizes">Sizes</label>
                                        <input asp-for="Sizes" required class="form-control" value="@product.Sizes" type="string" id="exampleInputSizes" placeholder="Sizes Name" />
                                        <span asp-validation-for="Sizes" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Discount" class="control-label" for="exampleInputDiscount">Discount</label>
                                        <input asp-for="Discount" required class="form-control" value="@product.Discount" type="number" id="exampleInputDiscount" placeholder="Discount Percentage %" />
                                        <span asp-validation-for="Discount" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Quantity" class="control-label" for="exampleInputQuantity">Quantity</label>
                                        <input asp-for="Quantity" required class="form-control" value="@product.Quantity" type="number" id="exampleInputQuantity" placeholder="Quantity Number" />
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ModelNumber" class="control-label" for="exampleInputModelNumber">ModelNumber</label>
                                        <input asp-for="ModelNumber" required class="form-control" value="@product.ModelNumber" type="string" id="exampleInputModelNumber" placeholder="ModelNumber Name" />
                                        <span asp-validation-for="ModelNumber" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="CategoryId" class="control-label" for="exampleInputCategoryId">Name Category</label>
                                        <select asp-for="CategoryId" required class="form-control select2" id="exampleInputCategoryId" style="width: 100%;">
                                            <option value="@product.Category.Id" selected>@product.Category.Name</option>
                                            @foreach (var cat in categories)
                                            {
                                                <option value="@cat.Id">@cat.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="BrandId" class="control-label" for="exampleInputBrandId">Name Brand</label>
                                        <select asp-for="BrandId" required class="form-control select2" id="exampleInputBrandId" style="width: 100%;">
                                            <option value="@product.Brand.Id" selected>@product.Brand.Name</option>
                                            @foreach (var p in brans)
                                            {
                                                <option value="@p.Id">@p.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="row">
                                        <h4 class="col-3 col-lg-3 ">Images</h4>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="card card-default">
                                                    <div class="card-body">
                                                        <label asp-for="Images" class="control-label" for="exampleInputImages">Upload Images</label>
                                                        <div id="actions" class="row">
                                                            <div class="col-lg-8">
                                                                <div class="btn-group w-100">
                                                                    <span class="btn btn-success col-lg-8">
                                                                        <input type="file" asp-for="Images" class="form-control btn btn-success" multiple id="exampleInputImages" style="font-size:larger;"/>
                                                                    </span>
                                                                    <button type="submit" class="btn btn-primary col start" hidden>
                                                                        <i class="fas fa-upload"></i>
                                                                        <span>Start upload Images</span>
                                                                    </button>
                                                                    <button type="reset" class="btn btn-warning col cancel col-lg-4">
                                                                        <i class="fas fa-times-circle"></i>
                                                                        <span>Cancel All Images</span>
                                                                    </button>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-4 d-flex align-items-center">
                                                                <div class="fileupload-process w-100">
                                                                    <div id="total-progress" class="progress progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0">
                                                                        <div class="progress-bar progress-bar-success" style="width:0%;" data-dz-uploadprogress></div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="table table-striped files" id="previews" hidden>
                                                            <div id="template" class="row mt-2">
                                                                <div class="col-auto">
                                                                    <span class="preview"><img src="data:," alt="" data-dz-thumbnail /></span>
                                                                </div>
                                                                <div class="col d-flex align-items-center">
                                                                    <p class="mb-0">
                                                                        <span class="lead" data-dz-name></span>
                                                                        (<span data-dz-size></span>)
                                                                    </p>
                                                                    <strong class="error text-danger" data-dz-errormessage></strong>
                                                                </div>
                                                                <div class="col-4 d-flex align-items-center">
                                                                    <div class="progress progress-striped active w-100" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0">
                                                                        <div class="progress-bar progress-bar-success" style="width:0%;" data-dz-uploadprogress></div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-auto d-flex align-items-center">
                                                                    <div class="btn-group">
                                                                        <button class="btn btn-primary start" hidden>
                                                                            <i class=""></i>
                                                                            <span>Upload Image</span>
                                                                        </button>
                                                                        <button data-dz-remove class="btn btn-danger delete">
                                                                            <i class="fas fa-trash"></i>
                                                                            <span>Delete Image</span>
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <span asp-validation-for="Images"></span>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @*   <a asp-action="CreateImageeProduct" asp-route-id="@product.Id" class="btn btn-outline-success text-black col-6 col-lg-3 txtFont">Add Images</a>*@
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ProductColorsidsIds" class="control-label" for="exampleInputProductColors">Product Colors</label>
                                        <select asp-for="ProductColorsidsIds" class="form-control" id="exampleInputProductColors" style="width:100% !important;">
                                            <option value="" disabled selected>Selected Color Product</option>
                                            @foreach (var pc in AllColors)
                                            {
                                                <option value="@pc.Id">@pc.Name</option>
                                            }
                                        </select>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </div>
                            </form>
                            <div class="card-footer">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="float:right">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- bs-custom-file-input -->
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/dist/js/demo.js"></script>
    <!-- Page specific script -->
    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>


    <script src="https://kit.fontawesome.com/26f3c2e8ac.js" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('.product-image-thumb').on('click', function () {
                var $image_element = $(this).find('img')
                $('.product-image').prop('src', $image_element.attr('src'))
                $('.product-image-thumb.active').removeClass('active')
                $(this).addClass('active')
            })
        })
    </script>
</body>
</html>
